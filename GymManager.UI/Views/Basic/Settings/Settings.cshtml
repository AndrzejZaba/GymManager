@using GymManager.Application.Settings.Queries.GetSettings;

@model IList<SettingsDto>

@{
    ViewData["Title"] = "Ustawienia";
}


<div class="card card-primary card-border-top">

    <div class="card-header bg-transparent p-2">
        <ul class="nav nav-pills" id="pills-tab" role="tablist">
            
            <li class="nav-item settings-nav-item" role="presentation">
                <button class="nav-link" id="pills-1-tab" data-bs-toggle="pill" data-bs-target="#pills-1" type="button" role="tab" aria-controls="pills-1" aria-selected="true">Aaaaa</button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-2-tab" data-bs-toggle="pill" data-bs-target="#pills-2" type="button" role="tab" aria-controls="pills-2" aria-selected="false">Bbbbb</button>
            </li>

        </ul>
    </div>
    
    <div class="card-body">

        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade" id="pills-1" role="tabpanel" aria-labelledby="pills-1-tab" tabindex="0">Aaaasdasd</div>
            <div class="tab-pane fade" id="pills-2" role="tabpanel" aria-labelledby="pills-2-tab" tabindex="0">BBBbbbsda</div>
        </div>

    </div>

</div>

        
        
@section Scripts{

    <script>

        $(document).ready(function () {

            $("li.settings-nav-item:first-child button:first-child").addClass("active");

            $("#pills-tabContent .tab-pane:first-child").addClass("show");
            $("#pills-tabContent .tab-pane:first-child").addClass("active");

        });

    </script>

}

